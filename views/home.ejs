<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <title>Members Only</title>
</head>
<body>
    <div class="row">
        <%- include("./partials/header.ejs", {user: locals.user ? locals.user : null}) %>
    </div>
    <div class="container">
        <div class="row" style="margin:1rem;">
            <% if(locals.user){ %>
                <h3> Hello, <b> <%= locals.user.first_name %> </b>
            <% } else { %>
                <h3> Hello, user! You are not logged in!</h3>
            <% } %>
        </div>
        
        <div class="container-fluid messages-container d-flex" style="margin-top:3rem">
            <% if(locals.messages) { %>
                <% messages.forEach(function(message){ %>
                    <%- include("./partials/messageCard.ejs", {message: message}) %>
                <% }) %>
            <% } %> 
        </div>
       
    </div>

</body>
</html>