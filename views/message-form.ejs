<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert Message</title>
</head>
<body>
        <div class="container">
        <%- include("./partials/header.ejs") %>
        <h3 class="display-3 mt-5">Sign Up</h3>
        <form class="form-inline mt-5" action="/message" method="POST">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="title" class="colFormLabel">Title: </label>
                        <input type="text" name="title" id="title" class="form-control">
                    </div>
                </div>
                <div class="col"></div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="Message">Email: </label>
                        <textarea name="message" id="message"></textarea>
                    </div>
                </div>
            </div>
            <div class="row"></div>
            <div class="row mt-3">
                <div class="col">
                    <button type="submit" class="btn btn-success btn-lg">Submit</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>